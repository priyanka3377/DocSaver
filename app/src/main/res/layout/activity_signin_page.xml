<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/signinemail"
                    android:background="@drawable/custom_edit_text"
                    android:padding="10dp"
                    android:layout_marginTop="40dp"
                    android:drawableStart="@drawable/ic_action_mail"
                    android:drawablePadding="8dp"
                    android:hint="@string/enter_email"
                    android:autofillHints="emailAddress"
                    android:inputType="textEmailAddress"
                    android:ems="12"
                    android:textColor="@color/black"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/signinpass"
                    android:background="@drawable/custom_edit_text"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_action_name"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="20dp"
                    android:autofillHints="password"
                    android:inputType="textPassword"
                    android:ems="12"
                    android:hint="@string/enter_pass"
                    android:textColor="@color/black"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/signincpass"
                    android:background="@drawable/custom_edit_text"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_action_name"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="20dp"
                    android:autofillHints="password"
                    android:inputType="textPassword"
                    android:ems="12"
                    android:hint="@string/confirm_pass"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/signinBtn"
                    android:hint="@string/sign_btn"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#8692f7"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_msg"
                    android:id="@+id/signinlogin"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#8692f7"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#80000000"
        android:gravity="center"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/loadingbar"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/loading"/>

    </LinearLayout>
</FrameLayout>